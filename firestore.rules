rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // kakeiboコレクションのデータは、allowedUsersコレクションにUIDが存在するユーザーのみアクセスを許可
    match /kakeibo/{docId} {
      allow read, write: if exists(/databases/$(database)/documents/allowedUsers/$(request.auth.uid));
    }

    // allowedUsersコレクションは誰でも読み取り可能（UIDの存在確認のため）
    // ただし、クライアントからの書き込みは禁止し、コンソールからのみ追加できるようにする
    match /allowedUsers/{userId} {
      allow read: if true;
      allow write: if false;
    }
  }
}